{% extends "baseConnect.html.twig" %}
{% block title %}Page Modif_Admin

{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="justify-content-center d-flex">
            <div class="alert alert-success mt-1 justify-content-center d-flex" style="width: 50%">
                <h5>
                    {{ message }}
                </h5>
            </div>
        </div>
    {% endfor %}

    <div class="container">

        <h1 class="mt-4 d-flex justify-content-center text-decoration-underline">
           Modification d'un user
        </h1>
        {{ form_start(form) }}
        <div class="row mt-5">
            <div class="col">
                {{ form_row(form.name) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.surname) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.surname) }}
                </div>
            </div>
        </div>


        <div class="row mt-5">
            <div class="col">
                {{ form_row(form.birthday) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.birthday) }}
                </div>
            </div>
            <div class="col">
                {{ form_row(form.login) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.login) }}
                </div>
            </div>
        </div>

        <div class="mt-5"></div>

        <div>
            <div class="col d-flex justify-content-center">
                {{ form_row(form.submit) }}

            </div>
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}
